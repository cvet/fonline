.ft C
> cmake \-G "Visual Studio 14 2015 Win64" \e
  "\-DCMAKE_INSTALL_PREFIX=C:\elibbson" \e
  "\-DENABLE_TESTS:BOOL=OFF"
.ft P
.fi
