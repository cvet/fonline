   bson_t *update;
   bson_error_t error;
   bson_t reply;
   char *str;
   uint32_t ret;

   /* insert {_id: \(dqone\(dq} and {_id: \(dqOne\(dq} */
   bulk = mongoc_collection_create_bulk_operation_with_opts (collection, NULL);
   doc = BCON_NEW (\(dq_id\(dq, BCON_UTF8 (\(dqone\(dq));
   mongoc_bulk_operation_insert (bulk, doc);
   bson_destroy (doc);

   doc = BCON_NEW (\(dq_id\(dq, BCON_UTF8 (\(dqOne\(dq));
   mongoc_bulk_operation_insert (bulk, doc);
   bson_destroy (doc);

