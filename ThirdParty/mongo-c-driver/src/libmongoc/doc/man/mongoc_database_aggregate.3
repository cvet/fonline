#include <bson/bson.h>
#include <mongoc/mongoc.h>

static mongoc_cursor_t *
current_op_query (mongoc_client_t *client)
{
   mongoc_cursor_t *cursor;
   mongoc_database_t *database;
   bson_t *pipeline;

   pipeline = BCON_NEW (\(dqpipeline\(dq,
                        \(dq[\(dq,
                        \(dq{\(dq,
                        \(dq$currentOp\(dq,
                        \(dq{\(dq,
                        \(dq}\(dq,
                        \(dq}\(dq,
                        \(dq]\(dq);

   /* $currentOp must be run on the admin database */
   database = mongoc_client_get_database (client, \(dqadmin\(dq);

   cursor = mongoc_database_aggregate (
      database, pipeline, NULL, NULL);

   bson_destroy (pipeline);
   mongoc_database_destroy (database);

   return cursor;
}
