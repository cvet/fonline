    Serializator Get(bool& value)
    {
        value = false;
        if (curPos + 1 > dataSize) {
            return this;
        }
        value = dataArray[curPos++] == 1 ? true : false;
        return this;
    }

    Serializator Get(string& str)
    {
        uint len = 0;
        for (uint i = curPos;; i++) {
            if (i == dataSize) {
                str = "";
                return this;
            }
            if (dataArray[i] == 0) {
                len = i - curPos;
                break;
            }
        }
        str.rawResize(len);
        for (uint i = 0; i < len; i++) {
            str.rawSet(i, dataArray[curPos++]);
        }
        curPos++; // Skip zero
        return this;
    }

    Serializator Get(hstring& hstr)
    {
        string str;
        Get(str);
        hstr = hstring(str);
        return this;
    }

    Serializator Get(int64[] values)
    {
        uint valuesLen = 0;
        Get(valuesLen);
        values.resize(valuesLen);
        for (uint i = 0; i < valuesLen; i++) {
            Get(values[i]);
        }
        return this;
    }

